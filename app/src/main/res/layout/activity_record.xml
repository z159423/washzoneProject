<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/find_rdid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ID"
            />

        <EditText
            android:id="@+id/find_rdname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이름"
            />

        <EditText
            android:id="@+id/find_rdnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="전화번호"
            />

        <EditText
            android:id="@+id/find_rdbirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="생년월일"
            />

        <EditText
            android:id="@+id/find_rdsms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="전송일"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_rdfind"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="찾기"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="회원번호    이름      전화번호        생년월일      메세지 발송일" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>

    <ListView
        android:id="@+id/record_listview"
        android:layout_width="391dp"
        android:layout_height="783dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />
</LinearLayout>